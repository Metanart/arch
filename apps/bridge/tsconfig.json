{
  "extends": "@arch/tsconfig/tsconfig.node.json",
  "include": [
    "domains/**/*",
    "shared/**/*",
    "index.ts",
    "index.d.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "baseUrl": ".",
    "paths": {
      "@domains/*": [
        "domains/*/public-api.ts"
      ],
      "@shared/*": [
        "shared/*/public-api.ts"
      ],
    }
  }
}
