{
  "extends": "@arch/tsconfig/tsconfig.node.json",
  "include": [
    "index.ts",
    "domains/**/*",
    "shared/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "electron-vite/node",
      "better-sqlite3",
    ],
    "baseUrl": ".",
    "paths": {
      "@domains/*": [
        "domains/*/public-api.ts"
      ],
      "@shared/*": [
        "shared/*/public-api.ts"
      ],
    }
  }
}
