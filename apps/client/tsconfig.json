{
  "extends": "@arch/tsconfig/tsconfig.web.json",
  "include": [
    "index.tsx",
    "domains/**/*",
    "shared/**/*",
    "../bridge/index.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@domains/*": [
        "domains/*/public-api.ts"
      ],
      "@shared/*": [
        "shared/*/public-api.ts"
      ]
    }
  }
}
