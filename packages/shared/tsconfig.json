{
  "extends": "@arch/tsconfig/tsconfig.node.json",
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
